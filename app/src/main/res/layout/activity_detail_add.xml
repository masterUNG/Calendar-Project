<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="keaononpho.pongsak.calendarproject.DetailAdd"
    android:background="@drawable/bg9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView13"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="#050505"
        android:background="#f9fca8"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView14"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView13"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="#050505"
        android:background="#f9fca8"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout" >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S A V E"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#0c6f05"
            android:onClick="clickSaveDetailAdd" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView14"
        android:layout_above="@+id/linearLayout"
        android:layout_marginTop="20dp"
        android:background="#c8ffffff"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:id="@+id/textView10"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtDetail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:layout_below="@+id/textView14" />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</RelativeLayout>
