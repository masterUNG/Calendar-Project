<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="keaononpho.pongsak.calendarproject.CalendarActivity"
    android:background="@drawable/bg6">

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a2f1f3f3"
        android:id="@+id/calendarView"
        android:weekSeparatorLineColor="#f90509"
        android:clickable="false"
        android:touchscreenBlocksFocus="false"
        android:layout_margin="20dp"
        android:layout_above="@+id/linBottonCal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linBottonCal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="B A C K"
            android:id="@+id/btnBackCal"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="#ffffff"
            android:onClick="clickBackMyCalendar"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select date"
            android:id="@+id/button10"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="#ffffff"
            android:onClick="clickSelectDateCalendar"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
